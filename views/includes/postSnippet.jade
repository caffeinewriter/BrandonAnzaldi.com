div.post
  h2
    a(href=post.url)
      = post.title
  span.date(style="font-weight:700;") Posted on: #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
  hr
  div.post.content
    != post.preview
  div.tags Tags: 
    - each tag in post.tags
      a(href=tagUrl(tag))
        span #{tag} 
    hr