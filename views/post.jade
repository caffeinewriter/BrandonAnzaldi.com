extends layout

block content
  div.post
    h1
      a(href=post.url)
        = post.title
    .row
      .columns.six
        span.date(style="font-weight:700;") Posted on: #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()} 
      include includes/sharing
    hr
    div.post.content
      != post.content
    div.tags
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-info #{tag}
    include includes/comments