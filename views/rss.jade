doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Brandon Anzaldi
    link http://brandonanzaldi.com/
    description The musings of Brandon Anzaldi
    atom:link(href='http://brandonanzaldi.com/rss', rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'http://brandonanzaldi.com/' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl
